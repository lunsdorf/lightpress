{
  "name": "@lightpress/with-payload-allowed",
  "version": "0.3.0",
  "description": "A lightpress handler that allowes a payload for certain HTTP methods only.",
  "main": "lib/with-payload-allowed.js",
  "typings": "lib/with-payload-allowed.d.ts",
  "engines": {
    "node": ">=8.10.0",
    "yarn": "^1.5.0"
  },
  "scripts": {
    "prepublish": "npm run lint && npm run test && npm run build",
    "build": "rimraf ./lib && tsc -p ./tsconfig.json",
    "lint": "tslint -c ./tslint.json -p ./tsconfig.json --fix ./src/**/*.ts*",
    "test": "tape -r ts-node/register --project ./tsconfig.json src/**/*.test.js | tap-diff"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lunsdorf/lightpress.git"
  },
  "keywords": [
    "composable",
    "express",
    "http",
    "lightpress",
    "server"
  ],
  "author": "Sören Lünsdorf <code@lunsdorf.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lunsdorf/lightpress/issues"
  },
  "homepage": "https://github.com/lunsdorf/lightpress#readme",
  "peerDependencies": {
    "@lightpress/lightpress": "^0.3.0"
  },
  "devDependencies": {
    "@types/node": "^9.6.5",
    "@types/tape": "^4.2.32",
    "rimraf": "^2.6.2",
    "tap-diff": "^0.1.1",
    "tape": "^4.9.0",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1"
  }
}
