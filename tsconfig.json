{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": "./src",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "outDir": "lib/",
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "target": "es2015"
  },
  "exclude": [
    "node_modules/",
    "lib/",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
