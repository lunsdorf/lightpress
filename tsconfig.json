{
  "compilerOptions": {
    "declaration": true,
    "isolatedModules": false,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "lib/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": false,
    "target": "es6"
  },
  "exclude": [
    "node_modules/",
    "lib/",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
