{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": "../../packages/",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "importHelpers": false,
    "lib": [
      "es2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "paths": {
      "@lightpress/*": ["./*"]
    },
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2015"
  },
  "exclude": [
    "node_modules/"
  ],
  "include": [
    "typings/**/*.d.ts"
  ]
}
