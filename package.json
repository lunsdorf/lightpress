{
  "name": "lightpress",
  "version": "0.1.0",
  "description": "A tiny HTTP server.",
  "main": "lib/main.js",
  "typings": "lib/main.d.ts",
  "engines": {
    "node": ">=6.5.0",
    "npm": ">=3.10.0"
  },
  "scripts": {
    "build": "rimraf ./lib && npm run qa && tsc --project ./tsconfig.json",
    "lint": "tslint -c ./tslint.json ./src/**/*.ts*",
    "prepublish": "npm run build",
    "qa": "npm run tsfmt && npm run lint && npm run test",
    "tsfmt": "tsfmt --replace --verbose",
    "test": "ts-node -P . -C typescript node_modules/.bin/tape src/**/*.test.ts | node_modules/.bin/tap-diff"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lunsdorf/lightpress.git"
  },
  "keywords": [
    "http",
    "server"
  ],
  "author": "Sören Lünsdorf <code@lunsdorf.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lunsdorf/lightpress/issues"
  },
  "homepage": "https://github.com/lunsdorf/lightpress#readme",
  "devDependencies": {
    "@types/node": "^6.0.62",
    "@types/tape": "^4.2.27",
    "rimraf": "^2.5.4",
    "tap-diff": "^0.1.1",
    "tape": "^4.6.0",
    "ts-node": "^1.3.0",
    "tslint": "^4.4.2",
    "typescript": "^2.1.5",
    "typescript-formatter": "^4.0.1"
  }
}
