{
  "name": "lightpress",
  "version": "0.0.1-dev",
  "description": "A tiny HTTP server.",
  "private": true,
  "main": "lib/main.js",
  "engines": {
    "node": ">=6.5.0",
    "npm": ">=3.10.0"
  },
  "scripts": {
    "test": "ts-node -P . -C typescript node_modules/.bin/tape src/**/*.test.ts | node_modules/.bin/tap-diff",
    "lint": "tslint -c ./tslint.json ./src/**/*.ts*",
    "qa": "npm run lint && npm run test",
    "build": "tsc --project ./tsconfig.json",
    "dts": "echo \"Error: no dts generator not setup yet\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lunsdorf/lightpress.git"
  },
  "keywords": [
    "http",
    "server"
  ],
  "author": "Sören Lünsdorf <code@lunsdorf.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lunsdorf/lightpress/issues"
  },
  "homepage": "https://github.com/lunsdorf/lightpress#readme",
  "devDependencies": {
    "@types/node": "^6.0.38",
    "@types/tape": "^4.2.27",
    "tap-diff": "^0.1.1",
    "tape": "^4.6.0",
    "ts-node": "^1.3.0",
    "tslint": "^3.15.0-dev.0",
    "typescript": "^2.1.0-dev.20160904"
  }
}
